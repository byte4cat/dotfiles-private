#!/bin/bash

STATE_FILE="$HOME/.local/private/waypaper/default.json"
FOLDERS=(
    "$HOME/.local/private/nsfw/wallpapers/h"
    "$HOME/.local/private/nsfw/wallpapers/v"
    "$HOME/.local/private/nsfw/wallpapers/r-h"
    "$HOME/.local/private/nsfw/wallpapers/r-v"
)

FOLDER_ARGS=()
for f in "${FOLDERS[@]}"; do
    FOLDER_ARGS+=("$f")
done

waypaper --state-file "$STATE_FILE" --folder "${FOLDER_ARGS[@]}"
